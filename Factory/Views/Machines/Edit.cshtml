@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Update Machine</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Machine:")
  <div>
    @Html.TextBoxFor(model => model.MachineName)
  </div>

  <input type="submit" value="Save" class="btn btn-primary">
}