@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>

@if (Model.Count == 0)
{
  <h2>No engineers yet.</h2>
  <h4>@Html.ActionLink("+ your first engineer", "Create")</h4>
}
else
{
  <h2>All Engineers:</h2>
  @foreach (Engineer engineer in Model)
  {
    <h3>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</h3>
  }
  <h2>@Html.ActionLink("+ another engineer", "Create")</h2>
}